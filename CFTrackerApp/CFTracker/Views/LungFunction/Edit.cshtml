@model LungFunctionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center py-4">Edit:<br />Lung Function Result</h1>

<div class="text-center fs-4">
    <div class="input-screen mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date:</label>
                <input asp-for="Date" class="form-control fs-5 text-center mx-auto w-75" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Fev" class="control-label">Fev:</label>
                <input asp-for="Fev" class="form-control fs-5 text-center mx-auto w-75" />
                <span asp-validation-for="Fev" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="Fvc1" class="control-label">Fvc1</label>
                <input asp-for="Fvc1" class="form-control fs-5 text-center mx-auto w-75" />
                <span asp-validation-for="Fvc1" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <label asp-for="TestingMachine" class="control-label">Testing Machine:</label>
                <select asp-for="TestingMachine" class="form-control form-select fs-5 text-center mx-auto w-75">
                    <option selected></option>
                    <option value="Home">Home</option>
                    <option value="Clinic">Clinic</option>
                </select>
                <span asp-validation-for="TestingMachine" class="text-danger"></span>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Save" class="w-25 text-center btn bgc-navy text-light fs-5 smallscreen-40width smallscreen-btn-fontsize" />
            </div>
        </form>
    </div>
</div>

<div class="text-center w-75 mx-auto">
    <a class="w-50 text-center btn bgc-navy text-light fs-5 smallscreen-80width smallscreen-btn-fontsize" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
