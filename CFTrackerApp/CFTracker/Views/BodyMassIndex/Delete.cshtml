@model CFTrackerServices.Models.BodyMassIndex

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center pt-4">Delete: Height & Weight</h1>
<h3 class="text-center pb-4">Are you sure you want to delete this?</h3>

<div class="w-75 mx-auto my-2 smallscreen-ct fs-4 border-navy border-4 rounded rounded-3">
    <dl class="row pt-3">
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.WeightKg)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.WeightKg)
        </dd>
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.WeightTestingMachine)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.WeightTestingMachine)
        </dd>
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.HeightCm)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.HeightCm)
        </dd>
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.HeightTestingMachine)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.HeightTestingMachine)
        </dd>
        <dt class="col-sm-4 text-end smallscreen-ct">
            @Html.DisplayNameFor(model => model.Bmi)
        </dt>
        <dd class="col-sm-8 text-center">
            @Html.DisplayFor(model => model.Bmi)
        </dd>
    </dl>
    
    <form class="text-center py-2 w-75 mx-auto smallscreen-80width" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div class="pt-2 text-center py-2 mx-auto smallscreen-80width">
        <a class="w-50 text-center btn bgc-navy text-light fs-5 smallscreen-80width smallscreen-btn-fontsize" asp-action="Index">Back to List</a>
    </div>
</div>
